<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Angular Demo</title>
    <script src="../public/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="../public/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="../public/bower_components/angular/angular.min.js"></script>
    <script src="../public/bower_components/angular-route/angular-route.min.js"></script>
    <script src="../public/bower_components/angular-translate/angular-translate.min.js"></script>
    <link rel="stylesheet" href="../public/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <script src="../public/app.js"></script>
    <script>
        var redirectUrl = "<%= redirectUrl %>";
        console.log('redirect', redirectUrl);
    </script>
    <base href="/">
</head>
<body ng-app="myApp">
<div ng-controller="mainController as ctrl">
    <nav class="navbar navbar-expand-sm bg-light">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Angular Demo</a>
        </div>
        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/user/{{selectedLanguage}}">{{ 'USER' | translate }}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/car/{{selectedLanguage}}">{{ 'CAR' | translate }}</a>
            </li>
        </ul>

    </nav>
<!--    <a href="/user/en">User</a>-->
<!--    <a href="/car/de">Car</a>-->
    <div ng-view></div>
    <div class="container">
        <form>
            <div class="form-group col-md-4">
                <label>{{ 'SELECT_LANG' | translate }}</label>
                <select class="form-control"
                        ng-model="selectLang"
                        ng-options="item.name for item in DEFAULT_LANG"
                        ng-change="ctrl.onLanguageChange()"
                >
                </select>
            </div>
        </form>
    </div>

</div>

</body>
</html>
